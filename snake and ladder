import random
print("snake and ladder game")
count=0
while(count<=100):
		a=input("enter r to roll the dice")
		if(a=="r"):
			r=random.randint(1,6)
			print("r value is",r)
			count=count+r
			print("score is",count)
			if(count==100):
			 	print("you won")
			 	print("your score is",count)
			elif(count==8):
				 count=37
				 print("u climb up the ladder")
			elif(count==11):
		    	 count=2
		    	 print("you have a snake bite")
			elif(count==13):
		    	 count=34
		    	 print("you climb up the ladder")
			elif(count==38):
		    	 count=9
		    	 print("you have a snake bite")
			elif(count==25):
		    	 count=4
		    	 print("you have a snake bite")
			elif(count==40):
		    	 count=68
		    	 print("you climb up the ladder")
			elif(count==65):
				 count=46
				 print("you have a snake bite")
			elif(count==52):
				 count=81
				 print("you climb up the ladder")
			elif(count==89):
			     count=70
			     print("you have a snake bite")
			elif(count==93):
			     count=64
			     print("you have a snake bite")
			elif(count==76):
			     count=97
			     print("you climb up the ladder")
			elif(count>100):
				print("retry") 
		else:
		    break		




